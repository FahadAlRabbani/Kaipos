<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="@drawable/bg_gradient">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/timeLabel2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        tools:text="12 pm"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/timeLabel2"
        android:layout_toEndOf="@+id/timeLabel2"
        android:src="@mipmap/partly_cloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:id="@+id/temperatureLabel2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryLabel2"
        android:layout_toRightOf="@+id/iconImageView2"
        android:layout_toEndOf="@+id/iconImageView2"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"
        android:layout_toLeftOf="@+id/temperatureLabel2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="partly cloudy"/>
</RelativeLayout>